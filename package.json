{
  "name": "pingman",
  "version": "1.0.0",
  "description": "A ping wrapper for mode with TypeScript",
  "main": "dist/src",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "prepublishOnly": "tsc --build --clean && tsc",
    "publish": "npm run publish",
    "test": "ava",
    "prebuild": "tsc --build --clean",
    "build": "tsc",
    "postbuild": "copyfiles -u 1 test/parser/samples/*.txt dist/test"
  },
  "author": "Govind S",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^13.13.5",
    "ava": "^3.8.2",
    "typescript": "^3.8.3",
    "@ava/typescript": "^1.1.1",
    "copyfiles": "^2.2.0"
  },
  "files": [
    "dist/source",
    "dist/test"
  ],
  "types": "dist/src/",
  "ava": {
    "files": [
      "test/*",
      "test/builder/*",
      "test/parser/*"
    ],
    "timeout": "1m",
    "typescript": {
      "rewritePaths": {
        "test/": "dist/test/"
      }
    }
  },
  "dependencies": {}
}
